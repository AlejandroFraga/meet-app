<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp"
    android:id="@+id/calendar_event">

    <ImageView
        android:id="@+id/calendar_event_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/icon3"
        android:layout_marginStart="24dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calendar_event_titulo"
        app:srcCompat="@drawable/calendar" />

    <TextView
        android:id="@+id/calendar_event_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="TextView"
        android:textSize="@dimen/text2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calendar_event_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendar_event_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="24dp"
        android:text="TextView"
        android:textSize="@dimen/text3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/calendar_event_titulo"
        app:layout_constraintTop_toBottomOf="@+id/calendar_event_titulo" />

    <TextView
        android:id="@+id/calendar_event_ubicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:autoLink="all"
        android:text="TextView"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="@dimen/text3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/calendar_event_data"
        app:layout_constraintTop_toBottomOf="@+id/calendar_event_data" />

</android.support.constraint.ConstraintLayout>